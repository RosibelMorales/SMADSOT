    <div class="col-xl-12 mb-5">
        <div class="card card-flush h-md-100">
            <div class="card-header pt-7">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label fw-bold text-gray-800">Empleados</span>
                </h3>
            </div>
            <div class="card-body pt-6">
                <div class="table-responsive col-xl-12">
                    <table class="table table-row-dashed align-middle gs-0 gy-3 my-0" id="tb_Empleados">
                        <thead>
                            <tr class="fs-7 fw-bold text-gray-400 border-bottom-0">
                                <th class="p-0 pb-3 min-w-175px text-start">Nombre</th>
                                <th class="p-0 pb-3 min-w-175px text-start">Tipo Acreditación</th>
                                <th class="p-0 pb-3 min-w-175px text-start">Norma Acreditación</th>
                                <th class="p-0 pb-3 min-w-175px text-start">Eliminado</th>
                            </tr>
                        </thead>
                        <tbody id="bodyEmpleados">
                            @{
                                var ind = 0;
                            }
                            @foreach (var item in Model.EvidenciaEmpleados)
                            {

                                <tr>
                                    <td>@item.Nombre</td>
                                    @if (!item.Eliminado)
                                    {
                                        <td>
                                            <select class="form-control form-control-solid form-select tipoAcreditacion tipo_@ind" data-control="select2" asp-for="@item.TipoAcreditacion" asp-items="(List<SelectListItem>)ViewBag.Tipo" name="@(string.Format("IdTipo_{0}",item.IdUserPuesto))" id="@(string.Format("IdTipo_{0}",item.IdUserPuesto))">
                                                <option value="">Seleccione...</option>
                                            </select>
                                        </td>
                                        <td>
                                            <select class="form-control form-control-solid form-select normaAcreditacion norma_@ind" data-control="select2" asp-for="@item.NormaAcreditacion" asp-items="(List<SelectListItem>)ViewBag.Norma" name="@(string.Format("IdNorma_{0}",item.IdUserPuesto))" id="@(string.Format("IdNorma_{0}",item.IdUserPuesto))">
                                                <option value="">Seleccione...</option>
                                            </select>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-link btn-color-muted btn-active-color-primary me-5 mb-2 btnDelete" data-id="@ind" data-nombre="@item.Nombre" data-us="@item.IdUserPuesto">Eliminar</button>
                                        </td>

                                    }
                                    else
                                    {
                                        <td colspan="3" style="text-align: -webkit-center;">Este usuario fue eliminado</td>
                                    }

                                    <input type="hidden" class="nombre_@ind" value="@item.Nombre" />
                                    <input type="hidden" class="user_@ind" value="@item.IdUserPuesto" asp-for="@item.IdUserPuesto" />
                                    <input type="hidden" class="eliminado_@ind" value="@item.Eliminado.ToString()" id="t_@item.IdUserPuesto">

                                </tr>


                                ind++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
