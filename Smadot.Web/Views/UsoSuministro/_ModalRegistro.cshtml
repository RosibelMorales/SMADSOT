@model Smadot.Models.Entities.UsoSuministro.Response.UsoSuministroResponse

<div class="row mb-5">
    <form role="form" id="form_registroUsoSuministro" class="clearfix">
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="form-group input-group-sm fv-row">
                    <label for="nombre">Nombre: &nbsp;<strong class="obligatorio">*</strong></label>
                    <input type="text"  class="form-control" placeholder="Nombre" id="nombre" name="nombre" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group input-group-sm fv-row">
                    <label for="cantidad">Cantidad: &nbsp;<strong class="obligatorio">*</strong></label>
                    <input type="text"  class="form-control" placeholder="Cantidad" id="cantidad" name="cantidad" />
                </div>
            </div>
             <div class="col-md-4">
                <div class="form-group input-group-sm fv-row">
                    <label for="proveedor">Proveedor: &nbsp;<strong class="obligatorio">*</strong></label>
                    <input type="text" asp-for="Proveedor" class="form-control" placeholder="Proveedor" id="proveedor" name="proveedor" />
                </div>
            </div>
           
        </div>
        <div class="row mb-5">
             <div class="col-md-4">
                <div class="form-group fv-row">
                    <label class="form-label" for="Fecha">Fecha de Registro: &nbsp;<strong class="obligatorio">*</strong></label>
                    <div class="position-relative" style="width: 50% !important">
                        <input class="form-control form-control-solid" id="Fecha" name="Fecha" />
                        <div class="position-absolute translate-middle-y top-50 end-0 me-3">
                            <i class="fa-solid fa-calendar-days"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="form-group fv-row">
                    <label for="Nota">Nota: &nbsp;<strong class="obligatorio">*</strong></label>
                    <textarea id="nota" class="form-control" rows="4" placeholder="Nota(s)" name="Nota"></textarea>
                </div>
            </div>
        </div>
        <hr />
        <div class="d-flex">
            <div class="py-2 px-4 col-md-6">
                <label class="form-label">Factura &nbsp;<strong class="obligatorio">*</strong></label><br />
                <div class="fv-row">
                    <input class="form-control input-sm" name="UrlFactura" id="UrlFactura" type="text" value="" hidden />
                    <div class="dropzone" id="dropzonejs">
                        <div class="dz-message needsclick">
                            <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                            <div class="ms-4">
                                <h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o haga clic para cargarlos.</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="clearfix">
            <div class="pull-left text-muted text-vertical-align-button">
                * Campos obligatorios
            </div>
        </div>
    </form>
</div>