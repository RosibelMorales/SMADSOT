            </div>
            <div class="py-2 px-4 col-md-3">
                @if (Model.UrlTarjetaCirculacion != null)
                {
                    <a class="btn btn-outline btn-outline-dashed me-2 mb-2"
                    download="referencia_pago_@(Model.Serie+"."+StorageManager.GetPathExtension(Model.UrlTarjetaCirculacion))"
                    href="/FilesStorage?url=@StorageManager.GetParsePathWithOutContainer(Model.UrlTarjetaCirculacion)" title="Descargar"
                    role="button">
                        <span class="svg-icon svg-icon-1">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px"
                             height="24px" viewBox="0 0 24 24" version="1.1">
