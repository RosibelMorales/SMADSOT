@model Smadot.Models.Entities.Testificacion.Response.TestificacionResponse
@using Smadot.Utilities.FileStorage
@{
    ViewData["Title"] = "Detalle Testificación";
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
}

@section styles{

}

@section breadcrumb{
    <li class="breadcrumb-item text-muted">Trámites</li>
    <li class="breadcrumb-item text-muted">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">Certificados</li>
    <li class="breadcrumb-item text-muted">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        <a asp-controller="Testificacion" asp-action="Index" class="text-muted text-hover-primary">Testificación</a>
    </li>
    <li class="breadcrumb-item text-muted">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="active" aria-current="page"><a href="#">@ViewData["Title"]</a></li>
}

@section toolbar{
}

<div class="card shadow-sm mb-5">
    <div class="card-body">
        <h4>Detalle</h4>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Placa:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="Placa" type="text" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Serie:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="Serie" type="text" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Marca:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="Marca" type="text" disabled />
                </div>
            </div>
        </div>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Submarca:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="SubMarca" type="text" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Año del Modelo:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="Modelo" type="text" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Tipo de Combustible:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <select class="form-control" asp-for="IdTipoCombustible" asp-items="ViewBag.Combustible" disabled>
                    </select>
                </div>
            </div>
        </div>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Tipo de certificado:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <select class="form-control " asp-for="IdTipoCertificadoOrigen" asp-items="ViewBag.Certificados"
                        disabled>
                    </select>
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Nombre del Propietario:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="Propietario" type="text" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">No. Tarjeta de Circulacion:&nbsp;<strong
                        class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="TarjetaCirculacion" type="text" disabled />
                </div>
            </div>
        </div>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Estado de Procedencia del vehículo:&nbsp;<strong
                        class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <select class="form-control " asp-for="EntidadProcedencia" asp-items="ViewBag.Estados" disabled>
                    </select>
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Fecha emisión de referencia:&nbsp;<strong
                        class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="FechaEmisionRef" value="@(Model.FechaEmisionRef.ToString("dd/MM/yyyy"))" type="text" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Fecha emisión de pago:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="FechaPago" value="@(Model.FechaPago.ToString("dd/MM/yyyy"))" type="text" disabled />
                </div>
            </div>
        </div>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Vigencia Certificado de Origen:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="VigenciaOrigen" type="text" value="@(Model.VigenciaOrigen.ToString("dd/MM/yyyy"))" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Número de referencia:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="NumeroRef" type="text" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Folio Certificado de Origen:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="FolioOrigen" type="text" disabled />
                </div>
            </div>
        </div>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-4">
                <label class="form-label">Persona que realiza trámite:&nbsp;<strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" asp-for="PersonaTramite" type="text" disabled />
                </div>
            </div>           
        </div>
        <hr />

        <div class="d-flex">
            <div class="py-2 px-4 col-md-3">
                @if (Model.UrlIdentificacion != null)
                {
                    <a class="btn btn-outline btn-outline-dashed me-2 mb-2"
                    download="referencia_pago_@(Model.Serie+"."+StorageManager.GetPathExtension(Model.UrlIdentificacion))"
