@using Smadot.Utilities.GestionTokens
@model Smadot.Models.Entities.Autenticacion.Request.CambioContraseniaRequest
@inject Smadot.Utilities.GestionTokens.IUserResolver UserResolver
@{
	var usuario = LecturaToken.UsuarioActualEnSesion(Context);
	var isCommonUser = usuario.RoleNames.Contains("Usuario Verificador");
	if (isCommonUser)
	{

		Layout = "~/Views/Shared/_LayoutPublico.cshtml";
	}
	else
	{
		Layout = "~/Views/Shared/_LayoutSmadot.cshtml";

	}
}
<div class="card shadow-sm">
	<div class="card-header">
		<h3 class="card-title">Cambiar Contraseña</h3>
		<div class="card-toolbar">
		</div>
	</div>
	<div class="card-body">
		<div class="col-md-12 px-5">
			<div class="col-md-12 px-5">
				<div class="panel-body px-5">
					<div class="row px-5">
						<div class="col-lg-12 px-5">
							<form id="formUpdateContrasenia">
								<div class="form-group">
									<input asp-for="IdUser" class="form-control" type="hidden" />
								</div>
								<div class="form-group input-group-sm mb-4">
									<label asp-for="ContraseniaActual" class="control-label required">Contraseña
										actual</label>
									<input asp-for="ContraseniaActual" class="form-control" type="password" />
									<span asp-validation-for="ContraseniaActual" class="text-danger"></span>
								</div>
								<div class="form-group input-group-sm mb-4">
									<label asp-for="ContraseniaNueva" class="control-label required">Contraseña
										nueva</label>
									<input asp-for="ContraseniaNueva" class="form-control" type="password" />
									<span asp-validation-for="ContraseniaNueva" class="text-danger"></span>
								</div>
								<div class="form-group input-group-sm mb-4">
									<label asp-for="ContraseniaConfirmar" class="control-label required">Confirmar nueva
										contraseña</label>
									<input asp-for="ContraseniaConfirmar" class="form-control" type="password" />
									<span asp-validation-for="ContraseniaConfirmar" class="text-danger"></span>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="card-footer d-flex justify-content-end py-6">
		<button id="updateContrasenia" class="btn btn-primary btn-sm pull-right" type="button">
			Actualizar contraseña
		</button>
	</div>
</div>

@section Scripts
	{
	<script src="~/js/Autenticacion/smadot.cambiar.contrasenia.js" asp-append-version="true"></script>
}