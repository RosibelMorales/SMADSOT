@model Smadot.Models.Entities.FoliosVendidosCentrosVerificacion.Response.FoliosVendidosCentrosVerificacionResponse
@using System.Globalization;
<div class="d-flex">
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Clave de venta</span>
        <div class="fw-semibold text-gray-400">@Model.ClaveVenta</div>
    </div>
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Referencia bancaria</span>
        <div class="fw-semibold text-gray-400">@Model.ReferenciaBancaria</div>
    </div>
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">CVV</span>
        <div class="fw-semibold text-gray-400">@Model.CVV</div>
    </div>
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Monto de cada venta</span>
        <div class="fw-semibold text-gray-400">@Model.MontoCadaVenta?.ToString("C2", new CultureInfo("es-MX"))</div>
    </div>
</div>
<div class="d-flex">
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Total</span>
        <div class="fw-semibold text-gray-400">@Model.Total</div>
    </div>
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Persona que recibe certificado</span>
        <div class="fw-semibold text-gray-400">@Model.PersonaRecibeCertificado</div>
    </div>
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Folios stock</span>
        <div class="fw-semibold text-gray-400">@Model.FoliosStock</div>
    </div>
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Folios FV</span>
        <div class="fw-semibold text-gray-400">@Model.FolioFV</div>
    </div>
</div>
<div class="d-flex">
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Folios usados</span>
        <div class="fw-semibold text-gray-400">@Model.FoliosUsados</div>
    </div>
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Folio de venta</span>
        <div class="fw-semibold text-gray-400">@Model.FolioVenta</div>
    </div>
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 me-6 mb-3">
        <span class="fs-6 text-gray-700 fw-bold">Fecha</span>
        <div class="fw-semibold text-gray-400">@Model.Fecha.ToString("dd/MM/yyyy")</div>
    </div>
</div>	