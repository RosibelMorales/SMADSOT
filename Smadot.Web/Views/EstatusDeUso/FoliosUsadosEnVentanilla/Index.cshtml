@using Smadot.Models.Dicts;
@inject Smadot.Utilities.GestionTokens.IUserResolver UserResolver
@{
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
    ViewData["Title"] = "Folios usados en ventanilla";
}

@section styles{
    <link rel="stylesheet" href="~/assets/plugins/custom/datatables/datatables.bundle.css" />
    <style>
        input:read-only {
            pointer-events: none;
            background: var(--kt-input-disabled-bg);
        }
    </style>
}
    @section breadcrumb{
    <li class="breadcrumb-item text-muted">
        <a href="#" class="text-muted text-hover-primary">Administrar formas valoradas</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        <a href="#" class="text-muted text-hover-primary">Estatus de uso</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item">
        <a href="#" class="text-hover-primary">@ViewData["Title"]</a>
    }

@section toolbar{
    @if (UserResolver.HasPermission(MenuFoliosUsadosVentanilla.Exportar))
    {
            <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                <a href='@Url.Action("DescargarReporte","FoliosVendidosCentrosVerificacion")' id="linkDownloadReport" style="display:none"></a>
                <button type="button" class="btn btn-sm fw-bold btn-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                    Exportar
                </button>
                <div id="kt_datatable_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4" data-kt-menu="true">
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-export="excel">
                            <i class="las la-file-excel"></i>&nbsp;&nbsp;
                            Exportar a Excel
                        </a>
                    </div>
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-export="pdf">
                            <i class="las la-file-pdf"></i>&nbsp;&nbsp;
                            Exportar a PDF
                        </a>
                    </div>
                </div>
                <div id="kt_datatable_buttons" class="d-none"></div>
            </div>
    }
    }

        <div class="row">
            <div class="col-md-12">
                <div class="card card-flush h-lg-100">
                    <div class="card-body pt-5">
                        <div class="bottom-buffer">
                            <div class="datatable datatable-bordered datatable-head-custom">
                                <div class="card card-p-0 card-flush">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center position-relative my-1 justify-content-end">
                                            <input type="text" data-kt-filter="search" class="form-control form-control-sm w-250px mb-6" placeholder="Buscar" />
                                        </div>
                                        <table class="table align-middle border rounded table-row-dashed fs-6 g-5" id="kt_datatable">
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <partial name="~/Views/Shared/_ModalRegistro.cshtml" model="string.Empty" />
        <partial name="~/Views/Shared/_ModalNotificacion.cshtml" model="string.Empty" />


    @section Scripts{
        <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
        <script src="~/lib/moment/js/moment-with-locales.js"></script>
        <script src="~/lib/daterangepicker/js/daterangepicker.js"></script>
        <script src="~/lib/es6-shim/dist/es6-shim.min.js"></script>
        <script src="~/lib/formvalidation/dist/js/FormValidation.full.min.js"></script>
        <script src="~/js/EstatusDeUso/folios.usados.en.ventanilla.index.js" asp-append-version="true"></script>
    }
