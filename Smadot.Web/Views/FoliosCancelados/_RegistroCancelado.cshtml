@model Smadot.Models.Entities.FoliosCancelados.Response.FoliosCanceladosResponseData.FoliosCanceladosResponse
<form class="" id="form_registro">
    <div class="col-md-12">
        <div class="panel-body">
            <div class="row align-items-end mb-5 mt-5">
                <div class="form-group input-group-sm col-md-4">
                    <label class="control-label">Folio</label>
                    <input type="text" asp-for="Folio" class="form-control" placeholder="Folio" readonly>
                    <input type="hidden" asp-for="Id" class="form-control" placeholder="Folio" readonly>
                </div>
                <div class="form-group input-group-sm col-md-4">
                    <label class="control-label">Tipo de Trámite</label>
                    <input type="text" asp-for="TipoTramite" class="form-control" disabled>
                </div>
                <div class="form-group input-group-sm col-md-4">
                    <label class="control-label">Fecha</label>
                    <input type="text" asp-for="Fecha" class="form-control" disabled>
                </div>
            </div>

            <div class="row align-items-end mb-5 mt-5">
                <div class="form-group input-group-sm col-md-4">
                    <label class="control-label">Datos de Usuario</label>
                    <input type="text" asp-for="UsuarioAprobo" class="form-control" disabled>
                </div>
                <div class="form-group input-group-sm col-md-4">
                    <label class="control-label">Datos de Vehículo</label>
                    <input type="text" asp-for="DatosVehiculo" class="form-control" disabled>
                </div>
                <div class="form-group input-group-sm col-md-4">
                    <label class="control-label">Persona que realizó el trámite</label>
                    <input type="text" asp-for="PersonaRealizoTramite" class="form-control" disabled>
                </div>
            </div>

            <div class="row align-items-end mb-5 mt-5">
                <div class="form-group input-group-sm col-md-4">
                    <label class="control-label">Fecha de Cancelación</label>
                    <input type="text" asp-for="FechaCancelacion" class="form-control">
                </div>
                <div class="form-group input-group-sm col-md-4">
                    <label class="control-label">Motivo de Cancelación</label>
                    @*<input type="text" id="Motivo" name="Motivo" class="form-control" >*@
                    <select asp-for="IdCatMotivoCancelacion" class="form-control">
                        <option value="">Seleccione</option>
                        <option value="1">Mala Impresión</option>
                        <option value="2">Folio Defectuoso</option>
                        <option value="3">Otro</option>
                    </select>
                </div>
                <div class="form-group input-group-sm col-md-4" style="display:none" id="InputOtro">
                    <label class="control-label">Otro</label>
                    <input type="text" asp-for="OtroMotivo" class="form-control">
                </div>
            </div>

        </div>
    </div>
</form>