@model List<Smadot.Models.Entities.Capacitacion.Response.CapacitacionResponse>
@{
	var asistio = Smadot.Models.Dicts.CapacitacionDic.Asistencia;
}
<div class="row mb-5">
	<form role="form" id="form_CapacitacionUpload" class="clearfix">
		<div class="row mb-5">
			<div class="col-md-4" hidden>
				<div class="form-group fv-row">
					<label class="form-label" for="IdEmpleado">Id Empleado</label>
					<div class="position-relative" style="width: 100% !important">
						<input class="form-control form-control-solid" type="text" readonly id="IdUserPuestoVerificentro" value="@Model[0].IdUserPuestoVerificentro" name="IdUserPuestoVerificentro" />
					</div>
				</div>
			</div>

			<div class="col-md-6" hidden>
				<div class="form-group fv-row">
					<label class="form-label" for="IdCapacitacion">Id Capacitacion Empleado</label>
					<div class="position-relative" style="width: 100% !important">
						<input class="form-control form-control-solid" type="text" readonly id="IdCapacitacionEmpleado" value="@Model[0].Id" name="IdCapacitacionEmpleado" />
					</div>
				</div>
			</div>

			<div class="col-md-6">
				<div class="form-group fv-row">
					<label class="form-label" for="IdCapacitacion">No. Trabajador</label>
					<div class="position-relative" style="width: 100% !important">
						<input class="form-control form-control-solid" type="text" readonly id="NumeroTrabajador" value="@Model[0].NumeroTrabajador" name="NumeroTrabajador" />
					</div>
				</div>
			</div>


			<div class="col-md-6">
				<div class="form-group fv-row">
					<label class="form-label" for="Asistencia">Asistio</label>
					<div class="position-relative" style="width: 100% !important">
						@if (Model[0].Asistio == asistio)
						{
							<input type="text" class="form-control form-control-solid" readonly value="SI" id="Asistio" name="Asistio">
						}
						else
						{
							<input type="text" class="form-control form-control-solid" readonly value="NO" id="Asistio" name="Asistio">
						}
					</div>
				</div>
			</div>

		</div>

		<div class="py-2 px-4 col-md-4">
			<label class="form-label">Subir fotografía &nbsp;<strong class="obligatorio">*</strong></label><br />
			<div class="fv-row">
				<div class="dropzone" id="dropzonejs3">
					<div class="dz-message needsclick">
						<i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
						<div class="ms-4">
							<h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o haga clic para cargarlos.</h3>
						</div>
					</div>
				</div>
			</div>
		</div>



		<br />
		<hr />
		<div class="clearfix">
			<div class="pull-left text-muted text-vertical-align-button">
				* Campos obligatorios
			</div>
		</div>
	</form>
</div>
