@model Smadot.Models.Entities.ReposicionCredencial.Response.vReposicionCredencialResponse
<div class="row mb-5">
    <div class="row mb-5">
        <input asp-for="Id" id="IdReposicionCredencial" class="IdReposicionCredencial" disabled hidden />
        <input asp-for="IdCatEstatusReporteCredencial" class="IdCatEstatusReporteCredencial" disabled hidden />
        <div class="col-md-4">
            <div class="form-group fv-row">
                <label class="form-label">Motivo: &nbsp;</label>
                <div class="position-relative">
                    <input class="form-control input-sm" asp-for="MotivoReporteCredencial" type="text" disabled />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group fv-row">
                <label class="form-label">Empleado: &nbsp;</label>
                <div class="position-relative">
                    <input class="form-control input-sm" asp-for="Nombre" type="text" disabled />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group fv-row">
                <label class="form-label">Estatus reporte: &nbsp;</label>
                <div class="position-relative">
                    <input class="form-control input-sm" asp-for="EstatusReporteCredencial" type="text" disabled />
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-md-12">
            <div class="form-group fv-row">
                <label class="form-label">Denuncia: &nbsp;</label>
                <textarea class="form-control input-uppercase" asp-for="Denuncia" rows="3" disabled></textarea>
            </div>
        </div>
    </div>
    <div class="py-2 px-4 col-md-12">
        @if (!string.IsNullOrEmpty(Model.UrlCredencial))
        {
            var url2 = Model.UrlCredencial.Split("/")[Model.UrlCredencial.Split("/").Length - 1];
            <label class="control-label fw-bold">Credencial</label>
            <br />
            @*<a class="btn btn-outline btn-outline-dashed me-2 mb-2 descargarDoc" data-url="@(Model.UrlCredencial)" role="button">*@
            <a class="btn btn-outline btn-outline-dashed me-2 mb-2" download="@url2" href="@ViewBag.UrlCredencial" title="Descargar" role="button">
                <span class="svg-icon svg-icon-1">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
