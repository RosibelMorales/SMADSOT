@using Smadot.Models.Dicts;
@inject Smadot.Utilities.GestionTokens.IUserResolver UserResolver
@{
    ViewData["Title"] = "Instalaciones";
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
}

@section styles{
    <link rel="stylesheet" href="~/lib/datatable/dist/css/dataTables.bootstrap4.min.css" />
    <style>
        input:read-only {
            /*pointer-events: none;*/
            background: var(--kt-input-disabled-bg);
        }

        input:disabled {
            pointer-events: none;
        }

        .select2-container .select2-selection--single {
            height: 43px !important;
        }

        .tableCustom > tbody > tr:nth-child(4n+1) > td,
        .tableCustom > tbody > tr:nth-child(4n+2) > td {
            background-color: #fff;
        }

        .tableCustom > tbody > tr:nth-child(4n+3) > td,
        .tableCustom > tbody > tr:nth-child(4n+4) > td {
            background-color: #f9f9f9;
        }

        /*.tableCustom > thead > tr {
                    background-color: #f9f9f9;
                }*/
    </style>
}

@section breadcrumb{
    <li class="breadcrumb-item text-muted">Seguimiento a CVV</li>
    <li class="breadcrumb-item text-muted">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">Mantenimiento</li>
<li class="breadcrumb-item text-muted">
    <span class="bullet bg-gray-400 w-5px h-2px"></span>
</li>
    <li class="active">Instalaciones</li>
}

@section toolbar{
    @if (UserResolver.HasPermission(MenuInstalaciones.Registrar))
    {
        <div class="btn-group dropup drop-up dropdown">
            <a class="btn btn-sm fw-bold btn-primary btnRegistrar" id="btnRegistrar" data-id="">Registrar</a>
        </div>
    }
}

<div class="row">
    <!--begin::Col-->
    <div class="col-md-12">
        <!--begin::List widget 1-->
        <div class="card card-flush h-lg-100">
            <!--begin::Body-->
            <div class="card-body pt-5">
                <div class="bottom-buffer">
                    <div class="datatable datatable-bordered cell-border datatable-head-custom">
                        <table class="table table-striped gx-7" id="kt_datatable"></table>
                    </div>
                </div>
            </div>
            <!--end::Body-->
        </div>
        <!--end::LIst widget 1-->
    </div>
    <!--end::Col-->
</div>

<partial name="~/Views/Shared/_ModalRegistro.cshtml" model="string.Empty" />
@section Scripts{
    <script src="~/lib/datatable/dist/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatable/dist/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/moment/js/moment-with-locales.js"></script>
    <script src="~/lib/daterangepicker/js/daterangepicker.js"></script>
    <script src="~/lib/es6-shim/dist/es6-shim.min.js"></script>
    <script src="~/lib/formvalidation/dist/js/FormValidation.full.min.js"></script>
    <script src="~/js/Instalaciones/smadot.instalacion.index.js" asp-append-version="true"></script>
}