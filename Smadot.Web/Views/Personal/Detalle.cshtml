            <div class="card-header pt-7">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label fw-bold text-gray-800">Puestos Anteriores</span>
                </h3>
            </div>
            <div class="card-body pt-6">
                <div class="row col-md-12">
                    <div class="py-2 px-4 col-md-3 table table-responsive">
                        <table class="table table-row-dashed align-middle gs-0 gy-3 my-0">
                            <thead>
                                <tr class="fs-7 fw-bold text-gray-400 border-bottom-0">
                                    <th class="p-0 pb-3 min-w-100px text-start"># Trabajador</th>
                                    <th class="p-0 pb-3 min-w-100px text-start">Puesto</th>
                                    <th class="p-0 pb-3 min-w-100px text-start">Fecha Capacitación inicio</th>
                                    <th class="p-0 pb-3 min-w-100px text-start">Fecha Capacitación fin</th>
                                    <th class="p-0 pb-3 min-w-100px text-start">Fecha Capacitación incorporacion</th>
                                    <th class="p-0 pb-3 min-w-100px text-start">Fecha Separación</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in (List<PersonalResponse>)ViewBag.Puestos)
                                {
                                    <tr>
                                        <td class="text-gray-600 fw-bold fs-6">@item.NumeroTrabajador</td>
                                        <td>@item.NombrePuesto</td>
                                        <td>@item.FechaCapacitacionInicio.ToString("dd/MM/yyyy")</td>
                                        <td>@item.FechaCapacitacionFinal.ToString("dd/MM/yyyy")</td>
                                        <td>@item.FechaIncorporacion.ToString("dd/MM/yyyy")</td>
                                        <td>@(item.FechaSeparacion.HasValue ? item.FechaSeparacion.Value.ToString("dd/MM/yyyy") : "")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

