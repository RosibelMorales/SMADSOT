@using Smadot.Models.Dicts;
@using Smadot.Models.Entities.Personal.Response;
@inject Smadot.Utilities.GestionTokens.IUserResolver UserResolver
@model Smadot.Models.Entities.Personal.Response.PersonalResponse
@{
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
    ViewData["Title"] = "Detalle";
}

@section styles{
    <link rel="stylesheet" href="~/lib/jquery-ui/dist/jquery-ui.min.css" type="text/css" />
    <style>
        .ui-autocomplete {
            position: absolute;
            cursor: default;
            z-index: 99999 !important;
        }
    </style>
}

@section breadcrumb{
    <li class="breadcrumb-item text-muted">
        <a href="#" class="text-muted text-hover-primary">Seguimiento a CVV </a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item">
        <a href="#" class="text-hover-primary">@ViewData["Title"]</a>
    </li>
    }


@section toolbar{
    <a class="btn btn-sm fw-bold btn-secondary" asp-controller="Personal" asp-action="Index">Cancelar</a>
    <button id="idUserPuestoVerificentro" value="@Model.IdPuestoVerificentro" hidden>Cancelar</button>
    @if (Model.IdCatEstatusPuesto == CatEstatusPuestoDic.PendienteValidacion)
    {
        @if (UserResolver.HasPermission(MenuPersonal.AprobarDVRF))
        {
            <a class="btn btn-sm fw-bold btn-warning btnModificarEstatus" data-estatus="@CatEstatusPuestoDic.AprobadoDVRF">Aprobar DVRF </a>
        }
        @if (UserResolver.HasPermission(MenuPersonal.RechazarDVRF))
        {
            <a class="btn btn-sm fw-bold btn-danger btnModificarEstatus" data-estatus="@CatEstatusPuestoDic.RechazadoDVRF">Rechazar DVRF</a>
        }
    }
    @if (Model.IdCatEstatusPuesto == CatEstatusPuestoDic.SolicitaModificar)
    {
        @if (UserResolver.HasPermission(MenuPersonal.PermiteModificar))
        {
            <a class="btn btn-sm fw-bold btn-warning btnModificarEstatus" data-estatus="@CatEstatusPuestoDic.PermiteModificar">Permitir Modificación</a>
        }
        @if (UserResolver.HasPermission(MenuPersonal.RechazaModificar))
        {
            <a class="btn btn-sm fw-bold btn-danger btnModificarEstatus" data-estatus="@CatEstatusPuestoDic.RechazaModificar">Rechazar Modificación</a>
        }
    }
    @if (Model.IdCatEstatusPuesto == CatEstatusPuestoDic.RechazaModificar)
    {
        @if (UserResolver.HasPermission(MenuPersonal.AprobarDVRF))
        {
            <a class="btn btn-sm fw-bold btn-warning btnModificarEstatus" data-estatus="@CatEstatusPuestoDic.PermiteModificar">Activar</a>
        }
    }
}

<form role="form" id="form_registro" clase="clearfix">
    <div class="card shadow-sm mb-5">
        <div class="card-body">
            @if (Model.FechaSeparacion.HasValue)
            {
                <h4>
                    Usuario <span class="badge badge-danger">Baja</span>
                </h4>
            }
            else
            {
                <h4>
                    Usuario <span class="badge badge-info">@CatEstatusPuestoDic.Nombres[Model.IdCatEstatusPuesto - 1]</span>
                </h4>
            }          
            <div class="d-flex mb-6 mt-6">
                <div class="py-2 px-4 col-md-4  fv-row">
                    <label class="form-label">Nombre: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase" asp-for="Nombre" type="text" disabled />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-4  fv-row">
                    <label class="form-label">Correo: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid" asp-for="CorreoUsuario" type="text" disabled />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-4  fv-row">
                    <label class="form-label">Teléfono: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid" asp-for="TelefonoUsuario" type="text" disabled />
                    </div>
                </div>
            </div>
            <div class="d-flex mb-6 mt-6">
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">Fecha de nacimiento: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase " asp-for="FechaNacimiento" value="@Model.FechaNacimiento.ToString("dd/MM/yyyy")" type="text" disabled />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">Género: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase " asp-for="Genero" value="@(string.IsNullOrEmpty(Model.Genero) ? "" : Model.Genero == "M" ? "Masculino" : "Femenino")" type="text" disabled />
                    </div>
                </div>
            </div>
            <div class="d-flex mb-6 mt-6">
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">RFC: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase" asp-for="Rfc" type="text" disabled />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">CURP: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase" asp-for="Curp" type="text" disabled />
                    </div>
                </div>
            </div>
            <div class="d-flex mb-6 mt-6">
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">Puesto:</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase " asp-for="NombrePuesto" type="text" disabled />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">Número de trabajador: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase" asp-for="NumeroTrabajador" type="text" disabled />
                    </div>
                </div>
            </div>
            <div class="d-flex mb-6 mt-6">
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">Fecha de capacitación inicio: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase " asp-for="FechaCapacitacionInicio" value="@Model.FechaCapacitacionInicio.ToString("dd/MM/yyyy")" type="text" disabled />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">Fecha de capacitación final: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase " asp-for="FechaCapacitacionFinal" value="@Model.FechaCapacitacionFinal.ToString("dd/MM/yyyy")" type="text" disabled />
                    </div>
                </div>
            </div>
            <div class="d-flex mb-6 mt-6">
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">Fecha de incorporación: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase " asp-for="FechaIncorporacion" value="@Model.FechaIncorporacion.ToString("dd/MM/yyyy")" type="text" disabled />
                    </div>
                </div>
                <div class="py-2 px-4 col-md-6  fv-row">
                    <label class="form-label">Fecha de acreditación de norma: &nbsp;</label>
                    <div class="position-relative">
                        <input class="form-control form-control-solid input-uppercase " asp-for="FechaAcreditacionNorma" value="@(Model.FechaAcreditacionNorma.HasValue ? Model.FechaAcreditacionNorma.Value.ToString("dd/MM/yyyy") : "--/--/----")" type="text" disabled />
                    </div>
                </div>
            </div>
        </div>
    </div>
