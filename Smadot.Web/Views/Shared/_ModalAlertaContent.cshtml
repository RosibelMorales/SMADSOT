@model Smadot.Models.Entities.Alertas.Response.vAlertaResponse
<h2 id="Alerta-id" style="display:none">@Model.Id</h2>
<span id="title-alert" style="display:none" >@Model.TableName</span>
<div class="d-flex">
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 mb-3">
        @if(string.IsNullOrEmpty(@Model.Nombre)){
            <span class="fs-12 text-gray-700 fw-bold">Alerta automática</span>
        }else{
            <span class="fs-12 text-gray-700 fw-bold">Registró</span>
            <div class="fw-semibold text-gray-400">@Model.Nombre</div>
        }
    </div>
</div>
<div class="d-flex">
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 mb-3">
        <span class="fs-4 text-gray-700 fw-bold">Fecha</span>
        <div class="fw-semibold text-gray-400">@Model.Fecha</div>
    </div>
</div>
<div class="d-flex">
    <div class="border border-gray-300 border-dashed rounded min-w-100px w-100 py-2 px-4 mb-3">
        <span class="fs-12 text-gray-700 fw-bold">Contenido</span>
        <div class="fw-semibold text-gray-400">@Html.Raw(Model.MovimientoInicial)</div>
    </div>
</div>
