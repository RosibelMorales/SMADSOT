    <!--end::Fonts-->
    <style>
        a#link-file,
        .alertDetalle {
            transition: color .2s ease;
        }

        a#link-file,
        .alertDetalle {
            color: var(--bs-link-color);
            text-decoration: none;
            cursor: pointer;
        }

        .hiddenDiv {
            display: none;
        }

        a#link-file {
            font-weight: bolder;
        }

        .btnToolbar {
            padding: 22px 0;
            margin-bottom: 25px;
            list-style: none;
            background-color: transparent;
            border-radius: 4px;
            text-align: end;
        }

        .liDatatable {
            font-size: medium;
        }

        .obligatorio {
            color: var(--kt-primary);
        }

        .background-success {
            background-color: #235b4e;
        }

        hr.red {
            margin: 20px 0px 25px !important;
        }

        main[role="main"] h4 {
            margin-bottom: 0px;
        }

        .separador-smadsot {
            background-color: var(--kt-primary);
            height: 2px;
        }

        .menu-link .menu-title {
            color: var(--kt-primary) !important;
        }

        .menu>.menu-item.here>.menu-link {
            background-color: var(--kt-primary-active) !important;
        }

        .menu>.menu-item.here>.menu-link>.menu-title {
            color: white !important;
        }

        .menu-icon .svg-icon {
            color: var(--kt-primary) !important;
        }

        .input-uppercase {
            text-transform: uppercase;
        }

        .card.card-dashed {
            border: 1px dashed var(--kt-primary) !important;
        }

        .select2-container--bootstrap5 .select2-selection {
            height: 35px !important;
        }


        .btn.btn-light-primary2 {
            color: var(--kt-primary-active);
            border-color: var(--kt-primary-light);
            background-color: var(--kt-primary-light);
        }

        .btn-check:active+.btn.btn-light-primary2,
        .btn-check:checked+.btn.btn-light-primary2,
        .btn.btn-light-primary2.active,
        .btn.btn-light-primary2.show,
        .btn.btn-light-primary2:active:not(.btn-active),
        .btn.btn-light-primary2:focus:not(.btn-active),
        .btn.btn-light-primary2:hover:not(.btn-active),
        .show>.btn.btn-light-primary2 {
            color: var(--kt-primary-inverse);
            border-color: var(--kt-primary-active);
            background-color: var(--kt-primary-active) !important;
        }

        .form-control-120 {
            max-width: 110px;
        }

        .form-select {
            font-size: 12px !important;
            height: 35px !important;
        }

        .fv-plugins-message-container {
            color: crimson;
        }
    </style>
    <!--begin::Vendor Stylesheets(used for this page only)-->
    @RenderSection("styles", required: false)
