<div id="kt_app_content1" class="app-content  flex-column-fluid ">
    <div id="kt_app_content_container1" class="app-container  container-xxl ">
        <div class="stepper stepper-pills stepper-column d-flex flex-column flex-xl-row flex-row-fluid gap-10 first"
            id="kt_create_account_stepper" data-kt-stepper="true">
            <div
                class="card d-flex justify-content-center justify-content-xl-start flex-row-auto w-100 w-xl-250px w-xxl-250px">
                <div class="card-body px-6 px-lg-10 px-xxl-15 py-20">
                    <div class="stepper-nav">
                        <div class="stepper-item current" data-kt-stepper-element="nav">
                            <div class="stepper-wrapper">
                                <div class="stepper-icon w-40px h-40px">
                                    <i class="stepper-check fas fa-check"></i>
                                    <span class="stepper-number">1</span>
                                </div>
                                <div class="stepper-label">
                                    <h3 class="stepper-title">
                                        Centro de Verificación
                                    </h3>
                                    <div class="stepper-desc fw-semibold">
                                        Seleccione el centro de atención
                                    </div>
                                </div>
                            </div>
                            <div class="stepper-line h-40px"></div>
                        </div>
                        <div class="stepper-item pending" data-kt-stepper-element="nav">
                            <div class="stepper-wrapper">
                                <div class="stepper-icon w-40px h-40px">
                                    <i class="stepper-check fas fa-check"></i>
                                    <span class="stepper-number">2</span>
                                </div>
                                <div class="stepper-label">
                                    <h3 class="stepper-title">
                                        Fecha y Hora
                                    </h3>
                                    <div class="stepper-desc fw-semibold">
                                        Seleccione la fecha y hora de la cita
                                    </div>
                                </div>
                            </div>
                            <div class="stepper-line h-40px"></div>
                        </div>
                        <div class="stepper-item pending" data-kt-stepper-element="nav">
                            <div class="stepper-wrapper">
                                <div class="stepper-icon w-40px h-40px">
                                    <i class="stepper-check fas fa-check"></i>
                                    <span class="stepper-number">3</span>
                                </div>
                                <div class="stepper-label">
                                    <h3 class="stepper-title">
                                        Datos Solicitante
                                    </h3>
                                    <div class="stepper-desc fw-semibold">
                                        Ingrese los datos del solicitante
                                    </div>
                                </div>
                            </div>
                            <div class="stepper-line h-40px"></div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card d-flex flex-row-fluid flex-center">
                <form class="card-body py-20 w-100 px-9 fv-plugins-bootstrap5 fv-plugins-framework"
                    novalidate="novalidate" id="kt_create_account_form">

                    <div class="current" data-kt-stepper-element="content">
                        <div class="w-100">

                            <div class="fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid mb-5">
                                <div class="row">
                                    <div class="col-lg-12 mb-5">
                                        <label class="control-label">Centro de Atención</label>
                                    </div>
                                    <div class="col-lg-12">
                                        <select class="form-control form-select"
                                            asp-items="(List<SelectListItem>)ViewBag.CentroAtencion"
                                            name="IdCentroAtencion" id="IdCentroAtencion">
                                            <option value="">Seleccione...</option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                            <div class="pb-10 pb-lg-15">
                                <label class="fw-bold text-dark">Si requiere conocer la ubicación de cada uno de los
                                    lugares donde puede realizar el trámite, </label><a href="javascript:;"
                                    id="btnCentrosAtencion"> dé click aquí.</a>

                            </div>
                        </div>
                    </div>

                    <div data-kt-stepper-element="content" class="pending">
                        <div class="w-100">


                            <div class="fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid mb-5"
                                id="DivStep2">
                                <div class="row">
                                    <div class="col-lg-6 mb-5">
                                        <div class="col-sm-12" id="htmlTarget">
                                            <label for="datetimepicker1Input" class="form-label">Fecha</label>
                                            <div class="input-group log-event" id="datetimepicker1"
                                                data-td-target-input="nearest" data-td-target-toggle="nearest">
                                                <input id="datetimepicker1Input" name="datetimepicker1Input" readonly
                                                    type="text" class="form-control form-control-sm"
                                                    data-td-target="#datetimepicker1" />
                                                <span class="input-group-text" data-td-target="#datetimepicker1"
                                                    data-td-toggle="datetimepicker">
                                                    <i class="fas fa-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label class="col-md-3 form-label">Hora </label>
                                        <div class="col-md-12">
                                            <select @*class="form-control form-select form-select-sm"*@
                                                class="form-control form-select" id="HoraCentro" name="HoraCentro"
                                                data-control="select2">
                                                <option>Seleccione...</option>

                                            </select>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div data-kt-stepper-element="content" class="pending">
                        <div class="w-100">

                            <div class="fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid ">

                                <div class="row ">

                                    <div class="col-12 ">
                                        <span class="card-label fw-bold text-gray-800 fs-6">Información del Vehículo
                                        </span>
                                        <hr>
                                    </div>
                                    <div class="col-12 mb-5">
                                        <label class="form-label col-md-12 mb-5"></label>
                                        <div class="form-check form-check-custom form-check-secondary form-check-solid">
                                            <input class="form-check-input" type="checkbox" name="Poblano" id="Poblano">
                                            <label class="form-check-label" for="Poblano">
                                                Verificación voluntaria (Si tu vehículo no tiene placas del estado de
                                                Puebla)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="mb-5 col-md-6">
                                        <label class="form-label required col-md-12">Placa</label>
                                        <div class="col-md-12">
                                            <input name="Placa" id="Placa"
                                                   class="form-control form-control-sm form-control-solid input-uppercase"
                                                   value="">
                                        </div>
                                    </div>
                                    <div class="mb-5 col-md-6">
                                        <label class="form-label required col-md-12">
                                            Número de Serie del Vehículo(No del
                                            motor):
                                        </label>
                                        <div class="col-md-12">
                                            <input name="NumSerie" id="NumSerie"
                                                   class="form-control form-control-sm form-control-solid input-uppercase"
                                                   value="">
                                        </div>
                                    </div>                               
                                    <div class="mb-5 col-md-6">
                                        <label class="form-label required col-md-12">Marca</label>
                                        <div class="col-md-12" id="select-container">
                                            <select
                                                class="form-control form-control-sm form-control-solid form-select-sm"
                                                name="Marca" id="Marca">
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="mb-5 col-md-6 divModeloRegistro">
                                        <label class="form-label col-md-12">Modelo del Registro:</label>
                                        <div class="col-md-12">
                                            <input id="ModeloFinanzas" name="ModeloFinanzas" type="text"
                                                class="form-control form-control-sm form-control-solid input-uppercase"
                                                disabled />
                                        </div>
                                    </div>
                                    <div class="mb-5 col-md-6" style="display: none;">
                                        <label class="form-label col-md-12">Modelo</label>
                                        <div class="col-md-12">
                                            @* <input name="Modelo" id="Modelo"
                                            class="form-control form-control-sm form-control-solid" disabled
                                            value=""> *@
                                            <select
                                                class="form-control form-control-sm form-control-solid form-select-sm"
                                                name="Modelo" id="Modelo">
                                                <option value="">Seleccionar...</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="mb-5 col-md-6">
                                        <label class="form-label required col-md-12">Año</label>
                                        <div class="col-md-12">
                                            <input name="Year" id="Year"
                                                class="form-control form-control-sm form-control-solid" value="">

                                        </div>
                                    </div>
                                    <div class="col-lg-6 mb-5 col-md-6 divEstado" style="display: none;">
                                        <label class="form-label required col-md-12">Estado de Procedencia del
                                            Vehículo</label>
                                        <div class="col-md-12">
                                            <select class="form-control form-select form-control-solid"
                                                asp-items="(List<SelectListItem>)ViewBag.Estados" name="Estado"
                                                id="Estado">
                                                <option value="">Seleccione...</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row mb-5">

                                        <div class="mb-5 col-md-6">
                                            <label class="form-label required col-md-12">Color del Vehículo</label>
                                            <div class="col-md-12">
                                                <input name="ColorVehiculo" id="ColorVehiculo"
                                                    class="form-control form-control-sm form-control-solid" value="" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6 mb-5">
                                            <label class="form-label required col-md-12">Tipo de combustible</label>
                                            <div class="col-md-12">

                                                <select class="form-control form-select form-control-solid"
                                                    asp-items="(List<SelectListItem>)ViewBag.TiposCombustible"
                                                    name="IdTipoCombustible" id="IdTipoCombustible">
                                                    <option value="">Seleccione...</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <span class="card-label fw-bold text-gray-800 fs-6">Información de Contacto
                                            </span>
                                            <hr>
                                        </div>
                                        <div class="col-4 mt-5">
                                            <label class="form-label col-md-12"></label>
                                            <div
                                                class="form-check form-check-custom form-check-secondary form-check-solid">
                                                <input class="form-check-input" type="checkbox" name="EsPersonaMoral"
                                                    id="EsPersonaMoral">
                                                <label class="form-check-label" for="EsPersonaMoral">
                                                    Persona Moral
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-8 mt-5">
                                            <label class="form-label required col-md-12 labelPropietario">Nombre del
                                                Propietario como aparece en la tarjeta de circulación</label>
                                            <div class="col-md-12">
                                                <input name="Nombre" id="Nombre"
                                                    class="form-control form-control-sm form-control-solid" value="">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-5 col-md-12">
                                        <label class="form-label required col-md-12">Nombre de la persona que realiza el
                                            trámite</label>
                                        <div class="col-md-12">
                                            <input name="NombreGeneraCita" id="NombreGeneraCita"
                                                class="form-control form-control-sm form-control-solid" value="">

                                        </div>
                                    </div>
                                    <div class="mb-5 col-md-12">
                                        <label class="form-label required col-md-12">Correo electrónico</label>
                                        <div class="col-md-12">
                                            <input name="Correo" id="Correo"
                                                class="form-control form-control-sm form-control-solid" value="">

                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" name="recaptchaToken" id="recaptchaToken">
                            </div>

                        </div>
                    </div>

                    <div class="d-flex flex-stack pt-10">
                        <div class="mr-2">
                            <button type="button" class="btn btn-lg btn-light-primary me-3"
                                data-kt-stepper-action="previous">
                                <span class="svg-icon svg-icon-4 me-1">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <rect opacity="0.5" x="6" y="11" width="13" height="2" rx="1"
                                            fill="currentColor"></rect>
                                        <path
                                            d="M8.56569 11.4343L12.75 7.25C13.1642 6.83579 13.1642 6.16421 12.75 5.75C12.3358 5.33579 11.6642 5.33579 11.25 5.75L5.70711 11.2929C5.31658 11.6834 5.31658 12.3166 5.70711 12.7071L11.25 18.25C11.6642 18.6642 12.3358 18.6642 12.75 18.25C13.1642 17.8358 13.1642 17.1642 12.75 16.75L8.56569 12.5657C8.25327 12.2533 8.25327 11.7467 8.56569 11.4343Z"
                                            fill="currentColor"></path>
                                    </svg>
                                </span>
                                Regresar
                            </button>
                        </div>
                        <div>
                            <button type="button" class="btn btn-lg btn-primary me-3" data-kt-stepper-action="submit">
                                <span class="indicator-label">
                                    Enviar
                                    <span class="svg-icon svg-icon-3 ms-2 me-0">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <rect opacity="0.5" x="18" y="13" width="13" height="2" rx="1"
                                                transform="rotate(-180 18 13)" fill="currentColor"></rect>
                                            <path
                                                d="M15.4343 12.5657L11.25 16.75C10.8358 17.1642 10.8358 17.8358 11.25 18.25C11.6642 18.6642 12.3358 18.6642 12.75 18.25L18.2929 12.7071C18.6834 12.3166 18.6834 11.6834 18.2929 11.2929L12.75 5.75C12.3358 5.33579 11.6642 5.33579 11.25 5.75C10.8358 6.16421 10.8358 6.83579 11.25 7.25L15.4343 11.4343C15.7467 11.7467 15.7467 12.2533 15.4343 12.5657Z"
                                                fill="currentColor"></path>
                                        </svg>
                                    </span>
                                </span>
                                <span class="indicator-progress">
                                    Espere un momento... <span
                                        class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>

                            <button type="button" class="btn btn-lg btn-primary" data-kt-stepper-action="next">
                                Continuar
                                <span class="svg-icon svg-icon-4 ms-1 me-0">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <rect opacity="0.5" x="18" y="13" width="13" height="2" rx="1"
                                            transform="rotate(-180 18 13)" fill="currentColor"></rect>
                                        <path
                                            d="M15.4343 12.5657L11.25 16.75C10.8358 17.1642 10.8358 17.8358 11.25 18.25C11.6642 18.6642 12.3358 18.6642 12.75 18.25L18.2929 12.7071C18.6834 12.3166 18.6834 11.6834 18.2929 11.2929L12.75 5.75C12.3358 5.33579 11.6642 5.33579 11.25 5.75C10.8358 6.16421 10.8358 6.83579 11.25 7.25L15.4343 11.4343C15.7467 11.7467 15.7467 12.2533 15.4343 12.5657Z"
                                            fill="currentColor"></path>
                                    </svg>
                                </span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div
                class="card d-flex justify-content-center justify-content-xl-start flex-row-auto w-100 w-xl-250px w-xxl-300px">
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <h3>Resumen de la cita</h3>
                        </div>
                        <div class="col-md-12 mb-3">
                            <b>Centro de atención:</b>
                        </div>
                        <div class="col-md-12 mb-5">
                            <p id="CentroSeleccionado">
                            </p>
                        </div>
                        <div class="col-md-12 mb-3">
                            <b>Día de la cita:</b>
                        </div>
                        <div class="col-md-12 mb-5">
                            <p id="FechaSeleccionada"></p>
                        </div>
                        <div class="col-md-12 mb-3">
                            <b>Hora de la cita:</b>
                        </div>
                        <div class="col-md-12 mb-5">
                            <p id="HoraSeleccionada"></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>