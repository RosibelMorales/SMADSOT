@using Smadot.Models.Dicts;
@inject Smadot.Utilities.GestionTokens.IUserResolver UserResolver
@{
    ViewData["Title"] = "Reposiciones";
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
}
@section styles{
    <link rel="stylesheet" href="~/lib/datatable/dist/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/dist/jquery-ui.min.css" type="text/css" />
    <style>
        main[role="main"] h1, main[role="main"] h2, main[role="main"] h3, main[role="main"] h4, main[role="main"] h5, main[role="main"] h6 p {
            margin-bottom: 0px !important;
        }

        .ui-autocomplete {
            position: absolute;
            cursor: default;
            z-index: 99999 !important;
        }

        .select2-container .select2-selection--single {
            height: 43px !important;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="~/lib/formvalidation/dist/css/formValidation.min.css" />
}

@section breadcrumb{
    <li class="breadcrumb-item text-muted">Trámites</li>
    <li class="breadcrumb-item text-muted">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">Certificados</li>
<li class="breadcrumb-item text-muted">
    <span class="bullet bg-gray-400 w-5px h-2px"></span>
</li>
    <li class="active">Reposiciones</li>
}

@section toolbar{
    @if (UserResolver.HasPermission(MenuReposiciones.Registrar))
    {
        <div class="btn-group dropup drop-up dropdown">
            <a class="btn btn-sm fw-bold btn-primary btnRegistrar" id="btnRegistrar" data-id="">Registrar</a>
        </div>
    }
}
<div class="row">
    <!--begin::Col-->
    <div class="col-md-12">
        <!--begin::List widget 1-->
        <div class="card card-flush h-lg-100">
            <!--begin::Body-->
            <div class="card-body pt-5">
                <div class="bottom-buffer">
                    <div class="datatable datatable-bordered cell-border datatable-head-custom">
                        <table class="table table-striped gx-7" id="kt_datatable"></table>
                    </div>
                </div>
            </div>
            <!--end::Body-->
        </div>
        <!--end::LIst widget 1-->
    </div>
    <!--end::Col-->
</div>

<partial name="~/Views/Shared/_ModalRegistro.cshtml" model="string.Empty" />
<partial name="~/Views/Shared/_ModalNotificacion.cshtml" model="string.Empty" />

@section Scripts{
    <script src="~/lib/datatable/dist/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatable/dist/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/jquery-ui/dist/jquery-ui.min.js"></script>

    <script src="~/lib/es6-shim/dist/es6-shim.min.js"></script>
    <script src="~/lib/formvalidation/dist/js/FormValidation.full.min.js"></script>
    <script src="~/lib/formvalidation/dist/js/plugins/Bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script asp-append-version="true" src="~/js/Tramite/Reposicion/smadot.tramite.reposicion.index.js"></script>
    <script src="~/js/Tramite/Reposicion/smadot.tramite.reposicion.detalle.js" asp-append-version="true"></script>
}