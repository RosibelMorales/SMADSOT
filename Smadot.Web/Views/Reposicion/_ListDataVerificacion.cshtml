@using Smadot.Models.DataBase;
@model List<vVerificacion>

    @{
        var trcolor = 0;
    }
<table class="table table-sm table-responsive">
    <tbody>

        @foreach (var list in Model)
        {
            <tr class="@((trcolor % 2 == 0) ? "table-active" : "")">
                <th style="text-align-last:center;vertical-align:middle"><input class="r_select" data-id="@list.Id" type="checkbox" id="rselect_@list.Id" name="radio_select" /></th>
                <th>
                    <div class="row"><b>Fecha</b></div>
                    <div class="row"><label>@list.Fecha.ToString("dd/MM/yyyy")</label></div>
                    <div class="row"><b>Tipo Certificado</b></div>
                    <div class="row"><label>@list.TipoCertificado</label></div>
                </th>
                <th>
                    <div class="row"><b>Placa</b></div>
                    <div class="row"><label>@list.Placa</label></div>
                    <div class="row"><b>Semestre</b></div>
                    <div class="row"><label>@list.Semestre</label></div>
                </th>
                <th>
                    <div class="row"><b>Serie</b></div>
                    <div class="row"><label>@list.Serie</label></div>
                    <div class="row"><b>Marca</b></div>
                    <div class="row"><label>@list.Marca</label></div>
                </th>
                <th>
                    <div class="row"><b>Folio del Certificado</b></div>
                    <div class="row"><label>@list.FolioCertificado</label></div>
                    <div class="row"><b>Modelo</b></div>
                    <div class="row"><label>@list.Modelo</label></div>
                </th>
                <th>
                    <div class="row"><b>Vigencia</b></div>
                    <div class="row"><label>@list.Vigencia.ToString("dd/MM/yyyy")</label></div>
                    <div class="row"><b>Combustible</b></div>
                    <div class="row"><label>@list.Combustible</label></div>
                </th>
                <th>
                    <div class="row"><b>Resultados Prueba</b></div>
                    <div class="row"><label>@list.IdResultadosVerificacion</label></div>
                    <div class="row"><b># tarjeta circulación</b></div>
                    <div class="row"><label>@list.TarjetaCirculacion</label></div>
                </th>
            </tr>
            trcolor++;

        }

    </tbody>
</table>