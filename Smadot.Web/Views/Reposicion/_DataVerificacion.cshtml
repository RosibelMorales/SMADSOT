@using Smadot.Models.Entities.Reposicion.Response;
@using Smadot.Models.DataBase;
@model vDataTramiteVentanillaResponse

<partial name="_tableVerificacion" model="Model" />
<form role="form" id="form_registro" class="clearfix">
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="form-group">
                <label for="name">Folio Actual: &nbsp;</label>
                <input type="text" class="form-control"
                       value='@(Model.FolioCertificado)' readonly disabled>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="hidden" asp-for="Id"  />
                <label for="name">Número de referencia: &nbsp;<strong class="obligatorio">*</strong></label>
                <input type="text" id="NumeroReferencia" name="NumeroReferencia" class="form-control"
                       value="@Model.NumeroReferencia" maxlength="20">
                <input type="hidden" value="@Model.IdVerificacion" id="ValueVerificacion" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="FechaEmisionRef">Fecha Emisión Referencia: <strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" id="FechaEmisionRef"
                           name="FechaEmisionRef" type="text" />
                </div>
            </div>
        </div>      
    </div>
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="form-group">
                <label for="FechaPago">Fecha Pago: <strong class="obligatorio">*</strong></label>
                <div class="position-relative">
                    <input class="form-control" id="FechaPago"
                           name="FechaPago" type="text" />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Estado">
                    Entidad Procedencia: &nbsp;<strong class="obligatorio">*</strong>
                </label>
                <select class="form-control form-select"
                        asp-items="(List<SelectListItem>)ViewBag.Estados" name="EntidadProcedencia"
                        id="EntidadProcedencia">
                    <option value="">Seleccione...</option>
                </select>
            </div>
        </div>
    </div>
</form>

<div class="row">
    <div class="form-group input-group-sm col-md-12">
        <h4>Documentación</h4>
    </div>
</div>

<div class="d-flex mb-5">
    <div class="py-2 px-4 col-md-4">
        <label class="form-label">Identificación Oficial</label><br />
        <div class="fv-row">
            <div class="dropzone" id="dropzonejs1">
                <div class="dz-message needsclick">
                    <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                    <div class="ms-4">
                        <h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o haga clic para cargarlos.
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="py-2 px-4 col-md-4">
        <label class="form-label">Tarjeta de Circulación</label><br />
        <div class="fv-row">
            <div class="dropzone" id="dropzonejs2">
                <div class="dz-message needsclick">
                    <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                    <div class="ms-4">
                        <h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o haga clic para cargarlos.
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="py-2 px-4 col-md-4">
        <label class="form-label">Comprobante de Pago</label><br />
        <div class="fv-row">
            <div class="dropzone" id="dropzonejs3">
                <div class="dz-message needsclick">
                    <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                    <div class="ms-4">
                        <h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o haga clic para cargarlos.
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>