@*Detalles del Verificentro*@
<div class="row">

    <!--begin::Col-->
    <div class="col-md-12">
        <!--begin::List widget 1-->
        <div class="card card-flush h-lg-100">
            <!--begin::Body-->
            <div class="card-body pt-5">
                <div class="bottom-buffer">
                    <div class="datatable datatable-bordered datatable-head-custom">
                        <table class="table table-striped" id="kt_datatable">
                            <thead>
                                <tr align="center">
                                    <td><h4><b>Clave</b></h4></td>
                                    <td><h4><b>Nombre</b></h4></td>
                                    <td><h4><b>Activo</b></h4></td>
                                    <td><h4><b>Direccion</b></h4></td>
                                    <td><h4><b>Rfc</b></h4></td>
                                    <td><h4><b>Telefono</b></h4></td>
                                    <td><h4><b>Correo</b></h4></td>
                                    <td><h4><b>Gerente Técnico</b></h4></td>
                                    <td><h4><b>Representante Legal</b></h4></td>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                <tr align="center">
                                    @*Clave*@
                                    @if (Model[0].Clave == null)
                                    {
                                        <td>-</td>
                                    }
                                    else
                                    {
                                        <td>@Model[0].Clave </td>
                                    }
                                    @*Nombre*@
                                    @if (Model[0].Nombre == null)
                                    {
                                        <td>-</td>
                                    }
                                    else
                                    {
                                        <td>@Model[0].Nombre</td>
                                    }
                                    @*Activo*@
                                    @if (Model[0].Activo == NoActivo)
                                    {
                                        <td>No Activo</td>
                                    }
                                    else if (Model[0].Activo == Activo)
                                    {
                                        <td>Activo</td>
                                    }
                                    else
                                    {
                                        <td>-</td>
                                    }
                                    
                                    @*Direccion*@
                                    @if (Model[0].Direccion == null)
                                    {
                                        <td>-</td>
                                    }
                                    else
                                    {
                                        <td>@Model[0].Direccion </td>
                                    }
                                    @*RFC*@
                                    @if (Model[0].Rfc == null)
                                    {
                                        <td>-</td>
                                    }
                                    else
                                    {
                                        <td>@Model[0].Rfc </td>
                                    }
                                    @*Telefono*@
                                    @if (Model[0].Telefono == null)
                                    {
                                        <td>-</td>
                                    }
                                    else
                                    {
                                        <td>@Model[0].Telefono </td>
                                    }
                                    @*Correo*@
                                    @if (Model[0].Correo == null)
                                    {
                                        <td>-</td>
                                    }
                                    else
                                    {
                                        <td>@Model[0].Correo</td>
                                    }
                                    @*GerenteTecnico*@
                                    @if (Model[0].GerenteTecnico == null)
                                    {
                                        <td>-</td>
                                    }
                                    else
                                    {
                                        <td>@Model[0].GerenteTecnico </td>
                                    }
                                    @*RepresentanteLegal*@
                                    @if (Model[0].RepresentanteLegal == null)
                                    {
                                        <td>-</td>
                                    }
                                    else
                                    {
                                        <td>@Model[0].RepresentanteLegal </td>
                                    }
                                    @*Longitud*@
                                    
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--end::Body-->
        </div>
        <!--end::LIst widget 1-->
    </div>
    <!--end::Col-->
</div>



