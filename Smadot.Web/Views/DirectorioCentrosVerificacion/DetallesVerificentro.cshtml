    <script>
        var longitud = Number("@Model[0].Latitud");
        var latitud = Number("@Model[0].Longitud");

        function initMap() {
              var macc = {lat: latitud, lng: longitud};
              var map = new google.maps.Map(document.getElementById('mapa'), {zoom: 15, center: macc});
