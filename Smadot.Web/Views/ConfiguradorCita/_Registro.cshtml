@model Smadot.Models.Entities.DirectorioCentrosVerificacion.Response.ConfiguradorCitaResponse

<form id="form-registro">
    <input asp-for="IdCVV" type="hidden" />
    <input asp-for="Id" type="hidden" />

    <div class="row pb-5">
        <div class="col-lg-12 col-md-12 col-sm-12 px-4 pt-5">
            <div class="form-check">
                <input class="form-check-input" asp-for="Habilitado" />
                <label class="form-check-label" asp-for="Habilitado">
                    Habilitado
                </label>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 px-4 pt-5 container-controls">
            <label class="form-label form-label-sm align-self-center w-lg-100">Fecha:</label>
            <input class="form-control form-control-sm" disabled value="@Model.Fecha.ToString("dd/MM/yyyy")" name="Fecha" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 px-4 pt-5 container-controls">
            <label class="form-label form-label-sm align-self-center">Capacidad:</label>
            <input class="form-control form-control-sm" asp-for="Capacidad" placeholder="1" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 px-4 pt-5 container-controls">
            <label class="form-label form-label-sm align-self-center">Hora de Inicio:</label>
            <input class="form-control form-control-sm main-timepicker" asp-for="HoraInicio" placeholder="00:00" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 px-4 pt-5 container-controls">
            <label class="form-label form-label-sm align-self-center">Hora de Fin:</label>
            <input class="form-control form-control-sm main-timepicker" asp-for="HoraFin" placeholder="00:00" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 px-4 pt-5 container-controls">
            <label class="form-label form-label-sm align-self-center">Duración de las Citas:</label>
            <div class="input-group input-group-sm">
                <input type="number" class="form-control form-control-sm" asp-for="IntervaloMin" placeholder="0" aria-describedby="inputGroup-sizing-sm" />
                <span class="input-group-text">min.</span>
            </div>
        </div>
    </div>
</form>