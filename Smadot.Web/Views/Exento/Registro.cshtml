@model Smadot.Web.Models.Exento.ExentoViewModel
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/lib/formvalidation/dist/css/formValidation.min.css" />
    <link rel="stylesheet" href="~/lib/tempus-dominus/css/tempus-dominus.css"/>
    <style>
        #Submarca, #Marca, #Serie, #Placa {
        text-transform: uppercase;
        }
        .tempus-dominus-widget.light .date-container-decades div:not(.no-highlight).active, .tempus-dominus-widget.light .date-container-years div:not(.no-highlight).active, .tempus-dominus-widget.light .date-container-months div:not(.no-highlight).active, .tempus-dominus-widget.light .date-container-days div:not(.no-highlight).active, .tempus-dominus-widget.light .time-container-clock div:not(.no-highlight).active, .tempus-dominus-widget.light .time-container-hour div:not(.no-highlight).active, .tempus-dominus-widget.light .time-container-minute div:not(.no-highlight).active, .tempus-dominus-widget.light .time-container-second div:not(.no-highlight).active {
            background-color: var(--kt-primary);
            color: #fff;
            text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
        }
    </style>
}

@section breadcrumb {
    <li class="breadcrumb-item">
        <a href="#" class="text-muted text-hover-primary">Trámites</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item">
        <a href="#" class="text-muted text-hover-primary">Certificados</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item">
        <a class="text-muted text-hover-primary" asp-action="Index" asp-controller="Exento">Exentos</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="active" aria-current="page"><a href="#">@ViewData["Title"]</a></li>
}

<div class="row g-5 g-xxl-8">
    <div class="col-xl-12">
        <div class="card mb-5 mb-xxl-8">
            <div class="card-header">
                <h3 class="card-title">Registrar Exento</h3>
                <div class="card-toolbar"></div>
            </div>


            <div class="card-body pb-0">
                <div class="bottom-buffer" class="ql-quil ql-quil-plain pb-3">


                    <form role="form" id="form_registro" clase="clearfix">
                        <div class="row">

                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="marca">Marca: &nbsp;<strong class="obligatorio">*</strong></label>
                                    <input type="text" asp-for="Marca" class="form-control" placeholder="Marca"
                                        id="Marca" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="submarca">Submarca: &nbsp;<strong class="obligatorio">*</strong></label>
                                    <input type="text" asp-for="Submarca" class="form-control" placeholder="Submarca"
                                        id="Submarca" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="placa">Placa: &nbsp;<strong class="obligatorio">*</strong></label>
                                    <input type="text" asp-for="Placa" class="form-control" placeholder="Placa"
                                        id="Placa" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="numSerie">Serie Vehículo: &nbsp;<strong
                                            class="obligatorio">*</strong></label>
                                    <input type="text" asp-for="Serie" maxlength="20" class="form-control"
                                        placeholder="Num. Serie" id="Serie" />
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="modelo">Año Modelo: &nbsp;<strong class="obligatorio">*</strong></label>
                                    <input type="text" asp-for="Modelo" class="form-control" placeholder="Modelo"
                                        id="Modelo" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="propietario">Propietario: </label>
                                    <input type="text" asp-for="Propietario" class="form-control"
                                        placeholder="Propietario" id="Propietario" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm ">
                                    <label for="tipoCertificado">Tipo Certificado: &nbsp;<strong
                                            class="obligatorio">*</strong></label>
                                    @*<input type="text" asp-for="IdCatTipoCertificado" class="form-control"
                                    placeholder="Tipo Certificado" />*@
                                    <select class="form-control form-control-solid form-select-solid" disabled
                                        id="TipoCertificado" name="TipoCertificado" data-control="select2"
                                        asp-for="IdCatTipoCertificado"
                                        asp-items="(List<SelectListItem>)Model.Certificados">
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="combustible">Combustible: &nbsp;<strong class="obligatorio">*</strong>
                                    </label>
                                    @*<input type="text" asp-for="Combustible" class="form-control"
                                    placeholder="Combustible" id="Combustible" />*@
                                    <select class="form-control form-select" id="Combustible" name="Combustible"
                                        data-control="select2" asp-items="(List<SelectListItem>)ViewBag.Tcombustible">
                                        <option value="">Seleccione...</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            @* <div class="col-md-3">
                            <div class="form-group input-group-sm">
                            <label for="vigencia">Vigencia </label>
                            <input type="text" asp-for="Vigencia" class="form-control" readonly disabled
                            placeholder="Vigencia" id="Vigencia"
                            value="@DateTime.Now.AddYears(2).ToString("dd/MM/yyyy")" />
                            </div>
                            </div> *@
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="fechaCartaFac">Fecha Carta Fac: </label>
                                    <div class="position-relative">
                                        <input class="form-control form-control-sm" id="FechaCarta" name="FechaCarta"
                                            type="text" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="numTarjetaCirculacion">No. de Tarjeta de Circulación: &nbsp;<strong
                                            class="obligatorio">*</strong> </label>
                                    <input type="text" asp-for="NumTarjetaCirculacion" class="form-control"
                                        placeholder="Núm Tarjeta Circulación" id="TarjetaCirculacion"
                                        name="TarjetaCirculacion" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="ultimoFolio">Último Folio:
                                    </label>
                                    <input type="text" asp-for="UltimoFolio" class="form-control"
                                        placeholder="Último Folio" id="UltimoFolio" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="holoAnterior">Vigencia Holo Anterior: </label>
                                    <div class="position-relative">
                                        <input class="form-control form-control-sm" id="HoloAnterior"
                                            name="HoloAnterior" type="text" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <hr class="my-5" />
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="numeroReferencia">Número Referencia: &nbsp;<strong
                                            class="obligatorio">*</strong> </label>
                                    <input type="text" asp-for="NumeroReferencia" maxlength="20" class="form-control"
                                        placeholder="Número Referencia" id="Referencia" name="Referencia" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="FechaEmisionRef">Fecha Emisión Referencia: </label>
                                    <div class="position-relative">
                                        <input class="form-control form-control-sm" id="FechaEmisionRef"
                                            name="FechaEmisionRef" type="text" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="FechaPago">Fecha Pago: </label>
                                    <div class="position-relative">
                                        <input class="form-control form-control-sm" id="FechaPago" name="FechaPago"
                                            type="text" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group input-group-sm">
                                    <label for="Estado">
                                        Entidad Procedencia: &nbsp;<strong class="obligatorio">*</strong>
                                    </label>
                                    <select class="form-control form-control-solid form-select-solid"
                                        data-control="select2" disabled
                                        asp-items="(List<SelectListItem>)ViewBag.Estados" name="EntidadProcedencia"
                                        id="EntidadProcedencia">
                                        <option value="">Seleccione...</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <br />
                        <hr />
                        <div class="d-flex row">
                            <div class="py-2 px-4 col-md-3 col-6">
                                <label class="form-label">Identificación Oficial</label><br />
                                <div class="fv-row">
                                    <div class="dropzone" id="dropzonejs1">
                                        <div class="dz-message needsclick">
                                            <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                                            <div class="ms-4">
                                                <h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o
                                                    haga clic para cargarlos.</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="py-2 px-4 col-md-3 col-6">
                                <label class="form-label">Tarjeta de Circulación</label><br />
                                <div class="fv-row">
                                    <div class="dropzone" id="dropzonejs2">
                                        <div class="dz-message needsclick">
                                            <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                                            <div class="ms-4">
                                                <h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o
                                                    haga clic para cargarlos.</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="py-2 px-4 col-md-3 col-6">
                                <label class="form-label">Factura</label><br />
                                <div class="fv-row">
                                    <div class="dropzone" id="dropzonejs3">
                                        <div class="dz-message needsclick">
                                            <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                                            <div class="ms-4">
                                                <h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o
                                                    haga clic para cargarlos.</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="py-2 px-4 col-md-3 col-6">
                                <label class="form-label">Referencia de Pago</label><br />
                                <div class="fv-row">
                                    <div class="dropzone" id="dropzonejs4">
                                        <div class="dz-message needsclick">
                                            <i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                                            <div class="ms-4">
                                                <h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o
                                                    haga clic para cargarlos.</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <hr />
                        <div class="clearfix">
                            <div class="pull-left text-muted text-vertical-align-button">
                                * Campos obligatorios
                            </div>
                        </div>
                        <br />
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <a class="btn  btn-sm fw-bold btn-secondary btn-bottom-right" asp-controller="Exento"
                            asp-action="Index">Cancelar</a>
                        &nbsp;&nbsp;&nbsp;
                        <button class="btn btn-sm fw-bold btn-primary btn-bottom-right" type="button"
                            id="save">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/tempus-dominus/js/tempus-dominus.min.js"></script>
    <script src="~/lib/daterangepicker/js/daterangepicker.js"></script>
    <script src="~/lib/es6-shim/dist/es6-shim.min.js"></script>
    <script src="~/lib/formvalidation/dist/js/FormValidation.full.min.js"></script>
    <script src="~/lib/formvalidation/dist/js/plugins/Bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/Exento/smadot.exento.registro.js" asp-append-version="true"></script>
}
