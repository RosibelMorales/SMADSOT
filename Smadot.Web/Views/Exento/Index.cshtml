@using Smadot.Models.Dicts;
@inject Smadot.Utilities.GestionTokens.IUserResolver UserResolver
@{
    ViewData["Title"] = "Exentos";
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
}

@section styles {
    @*<link rel="stylesheet" href="~/lib/datatable/dist/css/dataTables.bootstrap4.min.css" />*@
    <link rel="stylesheet" href="~/assets/plugins/custom/prismjs/prismjs.bundle.css" />
    <link rel="stylesheet" href="~/assets/plugins/custom/datatables/datatables.bundle.css" />
    <style>
        #Submarca,
        #NumeroReferencia,
        #Marca,
        #Serie,
        #Placa,
        #PlacaRef {
            text-transform: uppercase;
        }
    </style>
}

@section breadcrumb {
    <li class="breadcrumb-item">
        <a href="#" class="text-muted text-hover-primary">Trámites</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item">
        <a href="#" class="text-muted text-hover-primary">Certificados</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="active">@ViewData["Title"]</li>
}

@section toolbar {
    @if (UserResolver.HasPermission(MenuExentos.Registrar))
    {
        <a class="btn btn-sm fw-bold btn-primary" asp-controller="Exento" asp-action="Registro" type="button"
            id="save">Registrar Exento</a>
    }
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-flush h-lg-100">
            <div class="card-body pt-5">
                <div class="bottom-buffer">
                    <div class="datatable datatable-bordered datatable-head-custom">
                        <div class="card card-p-0 card-flush">
                            <div class="card-body">
                                <div class="d-flex align-items-center position-relative my-1 justify-content-end">
                                    <input type="text" data-kt-filter="search"
                                        class="form-control form-control-sm w-250px mb-6" placeholder="Buscar" />
                                </div>
                                <table class="table align-middle border rounded table-row-dashed fs-6 g-5"
                                    id="kt_datatable">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Shared/_ModalCierre.cshtml" model="string.Empty" />
<partial name="~/Views/Shared/_ModalRegistro.cshtml" model="string.Empty" />

@section Scripts {
    <script src="~/lib/daterangepicker/js/daterangepicker.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/lib/es6-shim/dist/es6-shim.min.js"></script>
    <script src="~/lib/formvalidation/dist/js/FormValidation.full.min.js"></script>
    <script src="~/assets/plugins/custom/prismjs/prismjs.bundle.js"></script>
    <script src="~/js/Exento/smadot.exento.index.js" asp-append-version="true"></script>
    <script src="~/js/Exento/smadot.exento.detalle.js" asp-append-version="true"></script>
}
