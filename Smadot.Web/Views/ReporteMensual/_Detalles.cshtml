@using Smadot.Models.Dicts;
@inject Smadot.Utilities.GestionTokens.IUserResolver UserResolver
@model List<Smadot.Models.Entities.ReporteMensual.Response.ReporteMensualResponse>
@{
    ViewData["Title"] = "Registro de reporte";
    //Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
    var Solicitud = Smadot.Models.Dicts.ReporteMensualDic.Solicitud;
    var Modificar = Smadot.Models.Dicts.ReporteMensualDic.Modificar;
}

<br />

@section styles{
    <link rel="stylesheet" href="~/lib/datatable/dist/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="css/select2.css" />
    <script src="js/select2.js"></script>
    <style>
        input:read-only {
            pointer-events: none;
            background: var(--kt-input-disabled-bg);
        }
    </style>
}

@section toolbar{
    <button class="btn btn-sm fw-bold btn-primary" type="button" id="btnRegistro">Aceptar</button>
    <button class="btn btn-sm fw-bold btn-primary" type="button" id="btnRegistro">Denegar</button>
}

@if (Model[0].IdCatEstatusReporte == Solicitud)
{
    <div class="row mb-5">
        <div class="col-md-12" align="right">
            @if (UserResolver.HasPermission(MenuReporteMensual.ValidadoDVRF))
            {
                <button class="btn btn-sm fw-bold btn-primary" type="button" id="btnAceptarSolicitud">Aceptar</button>
            }
            @if (UserResolver.HasPermission(MenuReporteMensual.RechazadoDVRF))
            {
                <button class="btn btn-sm fw-bold btn-secondary" type="button" id="btnDenegarSolicitud">Denegar</button>
            }
        </div>
    </div>
}
@if (Model[0].IdCatEstatusReporte == Modificar)
{
    <div class="row mb-5">
        <div class="col-md-12" align="right">
            @if (UserResolver.HasPermission(MenuReporteMensual.PermiteModificar))
            {
                <button class="btn btn-sm fw-bold btn-primary" type="button" id="btnAceptarModificar">Aceptar</button>
            }
            @if (UserResolver.HasPermission(MenuReporteMensual.RechazaModificar))
            {
                <button class="btn btn-sm fw-bold btn-secondary" type="button" id="btnDenegarModificar">Denegar</button>
            }
        </div>
    </div>
}



