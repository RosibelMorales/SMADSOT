@model Smadot.Models.Entities.SeguimientoCVV.Response.SeguimientoCVVResponse
<br />
<div class="row mb-5">
	<form role="form" id="form_registroCierreLinea" class="clearfix">
		<div class="row mb-5">
			@* <div class="col-md-3" hidden>
			<div class="form-group fv-row">
			<label class="form-label" for="NombreLinea">ID:</label>
			<div class="position-relative" style="width: 100% !important">
			</div>
			</div>
			</div> *@
			<input class="form-control form-control-solid" type="hidden" id="Id" name="Id" value="@Model.Id" readonly />
			<div class="col-md-6">
				<div class="form-group fv-row">
					<label class="form-label" for="NotaLineaMotivo">Nombre de linea: </label>
					<div class="position-relative" style="width: 100% !important">
						<input class="form-control form-control-solid" type="text" id="NombreLinea" name="NombreLinea"
							value="@Model.NombreLinea" readonly />
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group fv-row">
					<label class="form-label" for="NombreLinea">Usuario Registró: </label>
					<div class="position-relative" style="width: 100% !important">
						<input class="form-control form-control-solid" type="text" id="UserRegistro" name="UserRegistro"
							value="@Model.NombreUsuario" readonly />
					</div>
				</div>
			</div>



		</div>
		<hr />
		<div class="row mb-5">
			<div class="col-md-4">
				<div class="form-group row">
					<label class="form-label" for="autocomplete">Motivo: &nbsp;<strong
							class="obligatorio">*</strong></label>
					<div class="position-relative" style="width: 100% !important; height: 150% !important">
						<select class="form-control form-control-solid form-select" data-control="select2"
							asp-items="(List<SelectListItem>)ViewBag.Motivos" name="motivoSelect" id="motivoSelect">
						</select>
					</div>
				</div>
			</div>

		</div>

		<div class="row mb-5">
			<div class="col-md-12">
				<div class="form-group fv-row">
					<label class="form-label" for="NotaLineaMotivo">Nota: &nbsp;<strong
							class="obligatorio">*</strong></label>
					<div class="position-relative" style="width: 100% !important">
						<textarea class="form-control form-control-solid" rows="4" placeholder="Ingresa la nota"
							id="NotasMotivo" name="NotasMotivo"></textarea>
					</div>
				</div>
			</div>
		</div>

		<div class="py-2 px-4 col-md-4">
			<label class="form-label">Subir documento</label><br />
			<div class="fv-row">
				<div class="dropzone" id="dropzonejs1">
					<div class="dz-message needsclick">
						<i class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
						<div class="ms-4">
							<h3 class="fs-5 fw-bold text-gray-900 mb-1">Suelte los archivos aquí o haga clic para
								cargarlos.</h3>
						</div>
					</div>
				</div>
			</div>
		</div>
		<input class="form-control form-control-solid" type="text" id="IdEstatus" name="IdEstatus"
			value="@Model.Estatus" readonly hidden />
		<br />
		<hr />
		<div class="clearfix">
			<div class="pull-left text-muted text-vertical-align-button">
				* Campos obligatorios
			</div>
		</div>
	</form>
</div>
