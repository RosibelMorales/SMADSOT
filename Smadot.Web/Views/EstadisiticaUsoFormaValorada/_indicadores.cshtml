@model Smadot.Models.Entities.SolicitudFormaValorada.Response.DashboardIndicadores
@if (Model.Totales.Count == 0)
{
    <div id="kt_carousel_2_carousel" class="carousel carousel-custom slide" data-bs-ride="carousel" data-bs-interval="8000">
        <!--begin::Heading-->
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <!--begin::Label-->
            <span class="fs-4 fw-bold pe-2">Indicadores</span>
            <!--end::Label-->
            <!--begin::Carousel Indicators-->
            <ol class="p-0 m-0 carousel-indicators carousel-indicators-dots">
                <li data-bs-target="#kt_carousel_2_carousel" data-bs-slide-to="0" class="active ms-1">
                </li>
            </ol>
            <div class="carousel-inner pt-8">
                <div class="carousel-item active">
                    <div class="row g-5 g-xl-5 flex-center py-4">
                        <a href="javascript:void(0)" class="card hover-elevate-up shadow-sm parent-hover">
                            <div class="card-body d-flex align-items">

                                <span class="ms-3 text-gray-700 parent-hover-primary fs-5 fw-bold">
                                    No hay nada que mostrar
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <!--end::Carousel Indicators-->
        </div>
    </div>
}
else
{
    <div id="kt_carousel_2_carousel" class="carousel carousel-custom slide" data-bs-ride="carousel" data-bs-interval="8000">
        <!--begin::Heading-->
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <!--begin::Label-->
            <span class="fs-4 fw-bold pe-2">Indicadores</span>
            <!--end::Label-->
            <!--begin::Carousel Indicators-->
            <ol class="p-0 m-0 carousel-indicators carousel-indicators-dots">
                @{
                    var k = 0;
                }
                @for (int i = 0; i < Model.Totales.Count; i += 4)
                {
                    <li data-bs-target="#kt_carousel_2_carousel" data-bs-slide-to="@(k.ToString())"
                        class="@((k == 0) ? "active" : "") ms-1">
                    </li>
                    k++;
                }
            </ol>
            <div class="carousel-inner pt-8">

                @for (int i = 0; i < Model.Totales.Count; i += 4)
                {
                    <div class="carousel-item @((i == 0) ? "active" : "")">
                        <div class="row g-5 g-xl-5 flex-center py-4">
                            @for (int j = i; j < Math.Min(i + 4, Model.Totales.Count); j++)
                            {
                                var item = Model.Totales[j];
                                <div class="col-xl-2">
                                    <!--begin::Statistics Widget 5-->
                                    <a href="#" class="card @(item.CssClass) hoverable mh-lg-170px mb-xl-4">
                                        <!--begin::Body-->
                                        <div class="card-body">
                                            <!--begin::Svg Icon | path: icons/duotune/general/gen032.svg-->
                                            <span class="svg-icon svg-icon-white svg-icon-3x ms-n1">
                                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                                    xmlns="http://www.w3.org/2000/svg">
                                                    <rect x="8" y="9" width="3" height="10" rx="1.5" fill="currentColor"></rect>
                                                    <rect opacity="0.5" x="13" y="5" width="3" height="14" rx="1.5"
                                                        fill="currentColor">
                                                    </rect>
                                                    <rect x="18" y="11" width="3" height="8" rx="1.5" fill="currentColor"></rect>
                                                    <rect x="3" y="13" width="3" height="6" rx="1.5" fill="currentColor"></rect>
                                                </svg>
                                            </span>
                                            <!--end::Svg Icon-->
                                            <div class="text-white fw-bold fs-2 CountNoCertificaciones">
                                                @(item.Total ?? "N/A")
                                            </div>
                                            <div class="fw-semibold text-white">@item.Nombre</div>
                                        </div>
                                        <!--end::Body-->
                                    </a>
                                    <!--end::Statistics Widget 5-->
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            <!--end::Carousel Indicators-->
        </div>
    </div>
}