@model Smadot.Models.Entities.VentaCVV.Response.VentaCertificadoResponse
@using Smadot.Utilities.FileStorage
@{
    ViewData["Title"] = "Detalle Venta de Formas Valoradas a CVV";
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
}

@section styles{
    <link rel="stylesheet" href="~/lib/jquery-ui/dist/jquery-ui.min.css" type="text/css" />
}

@section breadcrumb{
    <li class="breadcrumb-item text-muted">
        <a href="#" class="text-muted text-hover-primary">Trámites </a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        <a href="#" class="text-muted text-hover-primary">Certificados </a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">
        <a href="/VentaCVV" class="text-muted text-hover-primary">Venta de Formas Valoradas a CVV </a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="active">@ViewData["Title"]</li>
}


@section toolbar{
    <a class="btn btn-sm fw-bold btn-secondary" asp-controller="VentaCVV" asp-action="Index">Cancelar</a>
}

<div class="card shadow-sm mb-5">
    <div class="card-body ">
        <h4>Consultar</h4>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-6">
                <label class="form-label">Verificentro: &nbsp;</label>
                <div class="position-relative">
                    <input class="form-control" value="@Model.NombreVerificentro" type="text" disabled />
                </div>
            </div>
            <div class="py-2 px-4 col-md-6">
                <label class="form-label" for="IdAlmacen">Almacén:</label>
                <div class="position-relative">
                    <input class="form-control" type="text" value="@Model.NombreAlmacen" disabled />
                </div>
            </div>
        </div>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-6">
                <label class="form-label">Último reporte revalidado: &nbsp;</label><br />
                <input class="form-control" value="@Model.FechaReporteRevalidado?.ToString("dd/MM/yyyy")" disabled type="text" />
            </div>
            <div class="py-2 px-4 col-md-6">
                <label class="form-label">Último tercer tanto validado: &nbsp;</label><br />
                <input class="form-control" value="@Model.FechaReporteValidado?.ToString("dd/MM/yyyy")" disabled type="text" />
            </div>
        </div>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-6">
                <label class="form-label ">Número de referencia: &nbsp;</label>
                <div class="position-relative">
                    <input class="form-control" value="@Model.NumeroReferencia" disabled type="text" />
                </div>
            </div>
            <div class="py-2 px-4 col-md-6">
                <label class="form-label ">Fecha de venta: &nbsp;</label>
                <div class="position-relative">
                    <input class="form-control" value="@Model.FechaVenta.ToString("dd/MM/yyyy")" disabled type="text" />
                </div>
            </div>
        </div>
        <div class="d-flex mb-6 mt-6">
            <div class="py-2 px-4 col-md-6">
                <label class="form-label">Número de referencia: &nbsp;</label>
                <div class="position-relative">
                    <input class="form-control" value="@Model.NumeroReferencia" disabled type="text" />
                </div>
            </div>
            <div class="py-2 px-4 col-md-6">
                <label class="form-label">Número de compra: &nbsp;</label>
                <div class="position-relative">
                    <input class="form-control" value="@Model.NumeroCompra" disabled type="text" />
                </div>
            </div>
        </div>
        <hr class=" mb-6 mt-6" />
        <div class="d-flex">
            <div class="py-2 px-4 col-md-3">
                @if (Model.UrlDoc1 != null)
                {
                    <a class="btn btn-outline btn-outline-dashed me-2 mb-2"
                   download="identificacion_oficial_@(Model.UrlDoc1+"."+StorageManager.GetPathExtension(Model.UrlDoc1))"
                   href="/FilesStorage?url=@StorageManager.GetParsePathWithOutContainer(Model.UrlDoc1)" title="Descargar"
                   role="button">
                        <span class="svg-icon svg-icon-1">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px"
