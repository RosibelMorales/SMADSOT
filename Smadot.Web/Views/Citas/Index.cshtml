@inject Smadot.Utilities.GestionTokens.IUserResolver UserResolver
@{
    ViewData["Title"] = "Historial de Citas";
    Layout = "~/Views/Shared/_LayoutSmadot.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/assets/plugins/custom/prismjs/prismjs.bundle.css" />
    <link rel="stylesheet" href="~/assets/plugins/custom/datatables/datatables.bundle.css" />
    <style>
        input:read-only {
            pointer-events: none;
            background: var(--kt-input-disabled-bg);
        }

        .table-responsive>.table.gs-7 td.dtr-control:first-child,
        .table.gs-7 th.dtr-control:first-child {
            padding-left: 0 !important;
        }

        .table-responsive>.table.gs-7 td.dtr-control:first-child,
        .table.gs-7 th.dtr-control:first-child {
            padding: 0.5rem 1.2rem !important;
            min-width: 120px;
        }
    </style>
}
@section toolbar {
    <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
        <button type="button" class="btn btn-sm fw-bold btn-primary" data-kt-menu-trigger="click"
            data-kt-menu-placement="bottom-end">
            Exportar
        </button>
        <div id="kt_datatable_export_menu"
            class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4"
            data-kt-menu="true">
            <div class="menu-item px-3">
                <a href="#" class="menu-link px-3 btnExport" data-kt-export="excel">
                    Exportar a Excel
                </a>
            </div>
            <div class="menu-item px-3">
                <a href="#" class="menu-link px-3 btnExport" data-kt-export="pdf">
                    Exportar a PDF
                </a>
            </div>
        </div>
        <div id="kt_datatable_buttons" class="d-none"></div>
    </div>
}
@section breadcrumb {
    <li class="breadcrumb-item">
        <a href="#" class="text-muted text-hover-primary">Administración CVV</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item">
        <a href="#" class="text-muted text-hover-primary">Configuración</a>
    </li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-400 w-5px h-2px"></span>
    </li>
    <li class="active">@ViewData["Title"]</li>
}

<div class="row">
    <!--begin::Col-->
    <div class="col-md-12">
        <!--begin::List widget 1-->
        <div class="card card-flush h-lg-100">
            @*<div class="card-header pt-1">
            <div class="col-md-4">
            <div class="form-group fv-row">
            <label class="form-label" for="almacenGrid">Almac&eacute;n</label>
            <select class="form-control form-control-solid form-select" data-control="select2" id="almacenGrid"
            asp-items="(List<SelectListItem>)ViewBag.Almacenes"><option>Todos</option></select>
            </div>
            </div>
            </div>*@
            <!--begin::Body-->
            <div class="card-body pt-5">
                <div class="my-5">
                    <div class="d-flex flex-wrap flex-md-row flex-column flex-md-nowrap mb-8 justify-content-end">
                        <div class="d-flex flex-column flex-md-row-auto mb-md-0 mb-2 mx-lg-5">
                            <label class="form-label  align-self-start text-start">Cita:</label>
                            <div class="input-group" id="kt_td_cita" data-td-target-input="nearest"
                                data-td-target-toggle="nearest">
                                <select class="form-control form-select" data-control="select2" id="Atendida"
                                    data-placeholder="Seleccione">
                                    <option value="">Seleccione...</option>
                                    <option value="0">Atendidas</option>
                                    <option value="1">No atendidas</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-flex flex-column flex-md-row-auto mb-md-0 mb-2 mx-lg-5">
                            <label class="form-label  align-self-start text-start">Fechas:</label>
                            <div class="input-group" id="kt_td_picker_simple" data-td-target-input="nearest"
                                data-td-target-toggle="nearest">
                                <input id="kt_daterangepicker_1" type="text" class="form-control form-control-sm"
                                    placeholder="Selecciona un rango de fechas..." readonly autocomplete="off" />
                                <span class="input-group-text" id="kt_daterangepicker_1_open">
                                    <i class="bi bi-calendar "><span class="path1"></span><span
                                            class="path2"></span></i>
                                </span>
                            </div>
                        </div>
                        <div class="d-flex flex-column flex-md-row-auto mb-md-0 mb-2 mx-lg-5">
                            <label class="form-label  align-self-start text-start">Buscar:</label>
                            <input type="text" data-kt-filter="search" class="form-control form-control-sm w-lg-100"
                                placeholder="Buscar" />
                        </div>
                        <div class="d-flex flex-column flex-md-row-auto mb-md-0 mb-2 align-self-end">
                            <div class="d-flex flex-column-auto align-self-center">
                                <a class="btn btn-sm fw-bold btn-primary" id="limpiarFiltros">Limpiar</a>
                            </div>
                        </div>
                    </div>

                    <table class="table table-striped border rounded gy-5 gs-7 w-100" id="kt_datatable">
                    </table>

                </div>
            </div>
            <!--end::Body-->
        </div>
    </div>
    <!--end::Body-->
</div>
<partial name="~/Views/Shared/_ModalRegistro.cshtml" model="string.Empty" />
@section Scripts {
    <script src="~/assets/plugins/custom/prismjs/prismjs.bundle.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/lib/moment/js/moment-with-locales.js"></script>
    <script src="~/lib/daterangepicker/js/daterangepicker.js"></script>
    <script src="~/lib/es6-shim/dist/es6-shim.min.js"></script>
    <script src="~/js/Cita/foliocancelado.js" asp-append-version="true"></script>
    <script src="~/js/Cita/smadot.index.js" asp-append-version="true"></script>
}